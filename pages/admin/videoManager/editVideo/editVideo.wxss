/* pages/admin/videoManager/editVideo/editVideo.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  margin-bottom: 40rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.cover-preview {
  width: 100%;
  height: 300rpx;
  border: 1rpx dashed #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.cover-preview image {
  width: 100%;
  height: 100%;
}

.video-preview {
  width: 100%;
  height: 120rpx;
  border: 1rpx dashed #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder {
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.save-btn {
  width: 100%;
  margin-top: 40rpx;
  border-radius: 8rpx;
}