<!-- pages/admin/login/login.wxml -->
<view class="container">
  <view class="logo-container">
    <text class="logo-text">管理员后台</text>
  </view>

  <view class="form-container">
    <view class="input-group">
      <image class="input-icon" src="/assets/icons/user.png" mode="aspectFit"></image>
      <input
        type="text"
        placeholder="请输入用户名"
        value="{{username}}"
        data-field="username"
        bindinput="onInputChange"
        class="input"
      />
    </view>

    <view class="input-group">
      <image class="input-icon" src="/assets/icons/lock.png" mode="aspectFit"></image>
      <input
        type="password"
        placeholder="请输入密码"
        value="{{password}}"
        data-field="password"
        bindinput="onInputChange"
        class="input"
      />
    </view>

    <view wx:if="{{errorMsg}}" class="error-msg">{{errorMsg}}</view>

    <button
      type="primary"
      loading="{{loading}}"
      disabled="{{loading}}"
      bindtap="onLogin"
      class="login-btn"
    >
      登录
    </button>
  </view>
</view>