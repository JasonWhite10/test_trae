/* pages/admin/questionManager/questionManager.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  margin-bottom: 20rpx;
}

.search-input-group {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0;
  background-color: #1aad19;
  color: #fff;
  border-radius: 8rpx;
}

/* 类型筛选 */
.filter-container {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.picker {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

/* 添加按钮 */
.add-btn {
  width: 100%;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

/* 题目列表 */
.question-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.question-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.question-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.question-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.question-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.question-type {
  background-color: #f5f5f5;
  padding: 4rpx 10rpx;
  border-radius: 16rpx;
}

.question-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.edit-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
  color: #333;
}

.delete-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0;
  background-color: #f5f5f5;
  color: #e64340;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 加载提示 */
.loading-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 分页提示 */
.pagination-tip {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 26rpx;
}