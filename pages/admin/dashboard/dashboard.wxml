<!-- pages/admin/dashboard/dashboard.wxml -->
<view class="container">
  <!-- 顶部导航 -->
  <view class="header">
    <text class="title">后台管理中心</text>
    <button bindtap="onLogout" class="logout-btn">退出登录</button>
  </view>

  <!-- 用户信息 -->
  <view class="user-info">
    <view class="avatar"></view>
    <view class="user-details">
      <text class="welcome-text">欢迎回来，</text>
      <text class="username">{{adminInfo.username}}</text>
    </view>
  </view>

  <!-- 统计卡片 -->
  <view class="stats-container">
    <view class="stat-card">
      <text class="stat-value">{{statistics.totalVideos}}</text>
      <text class="stat-label">视频总数</text>
    </view>
    <view class="stat-card">
      <text class="stat-value">{{statistics.totalQuestions}}</text>
      <text class="stat-label">题目总数</text>
    </view>
    <view class="stat-card">
      <text class="stat-value">{{statistics.totalUsers}}</text>
      <text class="stat-label">用户总数</text>
    </view>
    <view class="stat-card">
      <text class="stat-value">{{statistics.totalExams}}</text>
      <text class="stat-label">考试次数</text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-container">
    <view class="menu-item" bindtap="toVideoManager">
      <view class="menu-icon video-icon"></view>
      <text class="menu-text">视频管理</text>
    </view>
    <view class="menu-item" bindtap="toQuestionManager">
      <view class="menu-icon question-icon"></view>
      <text class="menu-text">题库管理</text>
    </view>
    <view class="menu-item" bindtap="toDataAnalysis">
      <view class="menu-icon analysis-icon"></view>
      <text class="menu-text">数据分析</text>
    </view>
  </view>
</view>