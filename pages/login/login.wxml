<!-- pages/login/login.wxml -->
<view class="container">
  <!-- 关闭按钮 -->
  <view class="close-btn" bindtap="closeLogin">
    <text>x</text>
  </view>

  <!-- 顶部Logo -->
  <view class="logo-container">
    <image class="logo-img" src="/images/learning_selected.png"></image>
  </view>

  <!-- 手机号显示区域 -->
  <view class="phone-display">
    <text class="phone-number">{{phoneNumber || '133****9953'}}</text>
  </view>

  <!-- 登录按钮 -->
  <button class="btn-primary" bindtap="phoneLogin"
          hover-class="btn-primary-hover"
          loading="{{isLoading}}">
    本机号码一键登录
  </button>

  <!-- 切换登录方式 -->
  <view class="switch-login" bindtap="adminLogin">
    <text>管理员登录</text>
  </view>

  <!-- 临时用户登录方式测试 -->
  <view class="switch-login" bindtap="userLogin">
    <text>用户登录</text>
  </view>
</view>