/* pages/login/login.wxss */
/* 基础样式 */
page {
  --primary-color: #00C16E;
  --primary-hover-color: #00A858;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --white: #ffffff;
  background-color: #F7F7F7;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 60rpx 50rpx;
  box-sizing: border-box;
  position: relative;
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: var(--text-tertiary);
}

/* 顶部Logo */
.logo-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 120rpx;
  margin-bottom: 80rpx;
}

.logo-img {
  width: 160rpx;
  height: 160rpx;
}

/* 手机号显示区域 */
.phone-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.phone-number {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

/* 登录按钮 */
.btn-primary {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  border: none;
}

.btn-primary-hover {
  background-color: var(--primary-hover-color);
}

/* 切换登录方式 */
.switch-login {
  font-size: 28rpx;
  color: var(--primary-color);
}

/* 登录容器 */
.login-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: var(--white);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

/* 二维码扫描提示 */
.qrcode-scanned {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.qrcode-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.phone-login-tip {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 0;
  text-align: center;
  padding: 0 20rpx;
  line-height: 40rpx;
}

/* 按钮样式 */
button {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 44rpx !important;
  font-size: 32rpx !important;
}

.btn-primary {
  width: 100%;
  height: 100rpx;
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: 45rpx;
  line-height: 67rpx;
  text-align: center;
  font-size: 32rpx;
  margin-top: 20rpx;
  transition: background-color 0.3s;
}

.btn-primary-hover {
  background-color: var(--primary-hover-color);
}

.btn-default {
  width: 100%;
  margin-top: 30rpx;
  background-color: var(--white);
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
}

.btn-default-hover {
  background-color: var(--default-color);
}

/* 管理员登录区域 */
.admin-login-container {
  width: 100%;
  background-color: var(--white);
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.05);
}

.admin-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 40rpx;
  text-align: center;
}

.input-item {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid var(--border-color);
  padding-bottom: 20rpx;
  margin-bottom: 40rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.input-field {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-primary);
}

/* 调试按钮样式 */
.debug-controls {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-debug {
  width: auto;
  background-color: rgba(0, 0, 0, 0.1);
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.btn-debug-hover {
  background-color: rgba(0, 0, 0, 0.2);
}

.debug-area {
  display: flex;
  margin-top: 10rpx;
}

.btn-debug-login {
  width: auto;
}

.btn-debug-login-hover {
  opacity: 0.8;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.container, .login-container, .admin-login-container {
  animation: fadeIn 0.5s ease-out forwards;
}

/* 适配不同屏幕 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 500rpx;
    margin: 0 auto;
  }
}

.admin-login-container {
  justify-content: center;
  margin-top: 10rpx;
}

.btn-debug-login {
  width: auto;
  margin: 0;
}

.admin-login-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 50rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
}

.input-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}