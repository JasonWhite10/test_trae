/* pages/examResult/examResult.wxss */
.result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.result-score {
  font-size: 80rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin: 30rpx 0;
}

.result-text {
  font-size: 36rpx;
  margin-bottom: 30rpx;
}

.certificate-container {
  width: 100%;
  background-color: #fff9e6;
  border-radius: 16rpx;
  padding: 40rpx;
  margin: 30rpx 0;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.certificate-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #d4af37;
}

.certificate-name {
  font-size: 50rpx;
  font-weight: bold;
  margin: 30rpx 0;
}

.certificate-content {
  font-size: 32rpx;
  margin: 20rpx 0;
}

.certificate-date {
  font-size: 28rpx;
  color: var(--text-tertiary);
  margin-top: 40rpx;
}

.certificate-image {
  width: 100%;
  height: auto;
  margin-top: 30rpx;
}

.action-buttons {
  width: 100%;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: var(--text-tertiary);
  font-size: 28rpx;
}