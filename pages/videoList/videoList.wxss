/* 基础变量定义 */
:root {
  --primary-color: #07c160;
  --background-color: #f5f5f5;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-color: #eeeeee;
  --white: #ffffff;
  --shadow-light: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  --shadow-medium: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  --radius-small: 8rpx;
  --radius-medium: 12rpx;
  --radius-large: 16rpx;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 头部区域样式 */
.header {
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.header .title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.header .subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 视频网格布局 */
.video-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
}

/* 视频卡片样式 */
.video-card {
  width: calc(50% - 10rpx);
  background-color: var(--white);
  border-radius: var(--radius-large);
  overflow: hidden;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
}

.video-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

/* 缩略图容器样式 */
.thumbnail-container {
  position: relative;
  width: 100%;
  padding-bottom: 56.25%; /* 16:9 比例 */
  overflow: hidden;
}

/* 视频缩略图 */
.video-thumbnail {
  position: absolute;
  width: 100%;
  height: 100%;
  display: block;
  transition: transform 0.3s ease;
}

.video-card:active .video-thumbnail {
  transform: scale(1.05);
}

/* 时长徽章 */
.duration-badge {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: var(--radius-small);
  z-index: 1;
}

/* 播放图标 */
.play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  opacity: 0.8;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon::after {
  content: '';
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-left: 30rpx solid white;
  margin-left: 5rpx;
}

.video-card:active .play-icon {
  background-color: var(--primary-color);
  transform: translate(-50%, -50%) scale(1.1);
}

/* 视频进度条 */
.video-progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background-color: rgba(255, 255, 255, 0.3);
  overflow: hidden;
}

/* 视频信息区域 */
.video-info {
  padding: 16rpx;
}

/* 视频标题 */
.video-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

/* 视频元数据 */
.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: var(--text-tertiary);
}

/* 观看次数 */
.video-view-count {
  flex: 1;
}

/* 进度文本 */
.progress-text {
  color: var(--primary-color);
  font-size: 22rpx;
}

/* 加载状态提示 */
.loading-tip, .loading-more {
  width: 100%;
  text-align: center;
  padding: 60rpx 20rpx;
  color: var(--text-secondary);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

/* 加载动画 */
.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 6rpx solid var(--border-color);
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 30rpx;
  height: 30rpx;
  border-width: 4rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 到底提示 */
.end-tip {
  width: 100%;
  text-align: center;
  padding: 40rpx;
  color: var(--text-tertiary);
  font-size: 24rpx;
}

/* 空状态 */
.empty-tip {
  width: 100%;
  text-align: center;
  padding: 100rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-secondary);
}

.empty-subtext {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 进度值样式 */
.progress-value {
  height: 100%;
  background-color: var(--primary-color);
  transition: width 0.3s ease;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .video-card {
    width: 100%;
  }
}