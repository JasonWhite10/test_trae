/* pages/register/register.wxss */
/* 基础样式变量 */
page {
  --primary-color: #07c160;
  --primary-dark: #06ad56;
  --text-main: #333;
  --text-secondary: #666;
  --text-light: #999;
  --border-color: #ddd;
  --bg-color: #f7f7f7;
  --success-color: #07c160;
  --error-color: #e64340;
  background-color: var(--bg-color);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

/* 顶部Logo和标题样式 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0 80rpx;
  opacity: 0;
  animation: fadeIn 0.6s forwards;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.logo-img {
  width: 100rpx;
  height: 100rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 表单样式 */
.register-form {
  flex: 1;
  width: 100%;
}

.form-item {
  margin-bottom: 30rpx;
  opacity: 0;
  animation: fadeIn 0.6s forwards;
}

.form-item:nth-child(1) {
  animation-delay: 0.2s;
}

.form-item:nth-child(2) {
  animation-delay: 0.3s;
}

.form-item:nth-child(3) {
  animation-delay: 0.4s;
}

.form-item:nth-child(4) {
  animation-delay: 0.5s;
}

.input-container {
  background-color: #fff;
  border-radius: 10rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border: 1rpx solid var(--border-color);
  transition: all 0.3s;
}

.input-container:focus-within {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.5;
}

.input-field {
  flex: 1;
  height: 90rpx;
  font-size: 30rpx;
  color: var(--text-main);
}

.select-field {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: var(--text-secondary);
}

/* 错误提示 */
.error-message {
  color: var(--error-color);
  font-size: 26rpx;
  margin: 10rpx 0 20rpx;
  padding-left: 10rpx;
}

/* 按钮样式 */
.btn-primary {
  margin-top: 40rpx;
  height: 90rpx;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background-color 0.3s;
  opacity: 0;
  animation: fadeIn 0.6s forwards;
  animation-delay: 0.6s;
}

.btn-primary:active {
  background-color: var(--primary-dark);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 适配大屏幕 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 600rpx;
    margin: 0 auto;
    padding: 60rpx 40rpx;
  }
}