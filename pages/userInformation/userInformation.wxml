<!--pages/userInformation/userInformation.wxml-->
<view class="container">
  <!-- 功能列表 -->
  <view class="function-list">
    <!-- 考试分数模块 -->
    <view class="function-item" bindtap="viewExamScores">
      <view class="function-icon score-icon">
        <text class="icon-text">📊</text>
      </view>
      <view class="function-info">
        <view class="function-title">考试分数</view>
        <view class="function-desc">查看历史考试成绩和排名</view>
      </view>
      <view class="function-arrow"></view>
    </view>

    <!-- 个人奖状模块 -->
    <view class="function-item" bindtap="viewCertificates">
      <view class="function-icon certificate-icon">
        <text class="icon-text">🏆</text>
      </view>
      <view class="function-info">
        <view class="function-title">个人奖状</view>
        <view class="function-desc">查看和保存您的满分奖状</view>
      </view>
      <view class="function-arrow"></view>
    </view>

    <!-- 退出登录模块 -->
    <view class="function-item" bindtap="logout">
      <view class="function-icon logout-icon">
        <image class="icon-img" src="/images/exit.png"></image>
      </view>
      <view class="function-info">
        <view class="function-title">退出登录</view>
        <view class="function-desc">退出当前账号，支持扫码重新登录</view>
      </view>
      <view class="function-arrow"></view>
    </view>
  </view>
</view>