/* pages/userInformation/userInformation.wxss */
/* 基础样式 */
page {
  --primary-color: #1677ff;
  --primary-hover-color: #0a66c2;
  --secondary-color: #00b42a;
  --tertiary-color: #ff7d00;
  --quaternary-color: #722ed1;
  --default-color: #f5f5f5;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-color: #eeeeee;
  --white: #ffffff;
  background-color: var(--default-color);
}

/* 容器样式 */
.container {
  padding: 30rpx;
}

/* 功能列表 */
.function-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 功能卡片 */
.function-item {
  background-color: var(--white);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
}

.function-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.05);
}

/* 功能图标 */
.function-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.score-icon {
  background-color: #845aceb0;
}

.certificate-icon {
  background-color: #ec561bb0;
}

.logout-icon {
  background-color: #f53f3f;
}

.icon-img {
  width: 50rpx;
  height: 50rpx;
  color: var(--white);
}

.icon-text {
  color: var(--white);
  font-size: 60rpx;
}

/* 功能信息 */
.function-info {
  flex: 1;
}

.function-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.function-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 箭头图标 */
.function-arrow {
  width: 36rpx;
  height: 36rpx;
  border-top: 3rpx solid var(--text-tertiary);
  border-right: 3rpx solid var(--text-tertiary);
  transform: rotate(45deg);
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.function-item {
  animation: fadeIn 0.5s ease-out forwards;
}

.function-item:nth-child(1) { animation-delay: 0.1s; }
.function-item:nth-child(2) { animation-delay: 0.2s; }
.function-item:nth-child(3) { animation-delay: 0.3s; }

/* 适配不同屏幕 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 600rpx;
    margin: 0 auto;
  }
}